{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "trip-spin",
  "permissions": {
    "http": {
      "enable": true,
      "domains": ["www.sathishsundar.in", "api.openai.com"]
    }
  },
  "settings": {
    "global": {
      "openaiApiKey": {
        "type": "string",
        "label": "OpenAI API Key",
        "defaultValue": "",
        "isSecret": true
      }
    }
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {},
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "trip-spin",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "trip_spin_dev"
  }
}
